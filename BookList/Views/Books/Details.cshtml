@model BookList.Models.Book
@{
    ViewData["Title"] = "Details";
}
<h2>Details</h2>
<hr/>
<div>
    <div class="row form-border">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" disabled class="form-control" />
